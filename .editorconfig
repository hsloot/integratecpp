# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# General
[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

# Special rules for special files
[{DESCRIPTION,LICENSE,NAMESPACE,inst/COPYRIGHTS,inst/COPYRIGHTS}]
insert_final_newline = false

# R
[*.{R,r}]
indent_style = space
indent_size = 4

# C, C++
[*.{c,cpp,h,hpp,ipp,tpp}]
indent_style = space
indent_size = 4

# Markdown, Rmarkdown, quarto files
[*.{Rmd,md,qmd,md}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false

# Tab indentation (no size specified)
[Makefile]
indent_style = tab
